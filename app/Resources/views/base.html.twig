{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Salut!{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('bundles/admin/css/normalize.css') }}" rel="stylesheet" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        {% block body %}{% endblock %}

        <footer id="subFooter">
            {% block footer %}
                subH.ro @ all rights reserverd. {{"now"|date('Y')}}
            {% endblock %}
        </footer>
        <script src="{{ asset('bundles/admin/js/jquery.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
